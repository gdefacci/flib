{
        "compilerOptions": {
                "module": "commonjs",
                "target": "es5",
                "moduleResolution": "node",
                "declaration": true,
                "sourceMap": true,
                "strictNullChecks": true,
                "forceConsistentCasingInFileNames": true,
                // "noUnusedLocals": true,
                "noImplicitAny": true,
                "noImplicitReturns": true
        },
        "include": [
                "index.ts",
                "libs/**/*.d.ts",
                "lib/**/*.ts",
                "test/**/*.ts"
        ]
}